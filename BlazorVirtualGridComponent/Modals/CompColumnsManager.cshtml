@typeparam TItem

@inherits CompColumnsManagerBase<TItem>



<style>

    .draggable2 {
        border: 1px solid #ccc;
        border-radius: 5px;
        margin: 1px;
        padding: 1px;
        display: block;
        cursor: move;
    }

    .droptarget2 {
        border: 1px solid #ebebeb;
        margin: 1px;
        padding: 1px;
        display: block;
    }
</style>

<table align="center" style="width:800px;height:400px">
    <tr>
        <td rowspan="2" style="vertical-align:top;">
            <label style="height:30px"><b>Regular Columns</b></label>
            <div id="@listDragTarget[0].ElementID" ondragover="event.preventDefault()" dropzone="move" class="droptarget2"
                 style="width:400px;height:370px;overflow:auto;background-color:lightcyan">
                @foreach (var item in listDraggable.Where(x => x.ParentID == listDragTarget[0].ID))
                {
                    <div id="@item.ElementID" class="draggable2" onmousedown="@(e => OnMouseDown(e, item))" style="line-height:25px" draggable="true">
                        @item.Name
                    </div>

                }

            </div>

        </td>
        <td>
            <table>
                <tr>
                    <td valign="top" style="vertical-align:top;">
                        <label style="height:30px"><b>Frozen Columns</b></label>
                        <div id="@listDragTarget[1].ElementID" ondragover="event.preventDefault()" dropzone="move" class="droptarget2"
                             style="width:400px;height:165px;overflow:auto;background-color:lightcyan">
                            @foreach (var item in listDraggable.Where(x => x.ParentID == listDragTarget[1].ID))
                            {
                                <div id="@item.ElementID" class="draggable2" onmousedown="@(e => OnMouseDown(e, item))" style="line-height:25px" draggable="true">
                                    @item.Name
                                </div>

                            }

                        </div>
                    </td>
                </tr>
                <tr>
                    <td valign="top" style="vertical-align:top;">
                        <label style="height:30px"><b>Hidden Columns</b></label>
                        <div id="@listDragTarget[2].ElementID" ondragover="event.preventDefault()" dropzone="move" class="droptarget2"
                             style="width:400px;height:165px;overflow:auto;background-color:lightcyan">
                            @foreach (var item in listDraggable.Where(x => x.ParentID == listDragTarget[2].ID))
                            {
                                <div id="@item.ElementID" class="draggable2" onmousedown="@(e => OnMouseDown(e, item))" style="line-height:25px" draggable="true">
                                    @item.Name
                                </div>

                            }

                        </div>

                    </td>
                </tr>
            </table>
        </td>
    </tr>


</table>




