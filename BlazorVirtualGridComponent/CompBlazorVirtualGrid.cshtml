
@typeparam TItem

@inherits CompBlazorVirtualGrid_Logic<TItem>




<CompCSS bvgGrid="@bvgGrid"></CompCSS>



@if (bvgGrid.IsReady)
{

    <h5>@bvgGrid.Name Count @bvgGrid.RowsTotalCount</h5>


    <CompTable bvgGrid="@bvgGrid" ActualRender="@ActualRender" ></CompTable>
}
else
{
    <br />
    <h3>Loading...</h3>
    <h3>@bvgGrid.Name</h3>
}